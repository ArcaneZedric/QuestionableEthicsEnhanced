<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!--Modified Anesthetic.-->
  
  <HediffDef ParentName="DiseaseBase">
    <defName>QE_NeuralDisruption</defName>
    <label>Neural Disruption</label>
    <description>A Nerve staple decided to temporarily suppress the pawns consciousness.</description>
    <isBad>false</isBad>
    <initialSeverity>1</initialSeverity>
    <maxSeverity>1</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>45000~120000</disappearsAfterTicks>
      </li>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.9</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>Recovering</label>
        <painFactor>0.95</painFactor>
        <vomitMtbDays>4</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.9</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.6</minSeverity>
        <label>Reconnecting</label>
        <painFactor>0.8</painFactor>
        <vomitMtbDays>0.25</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.7</setMax>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
        <forgetMemoryThoughtMtbDays>5</forgetMemoryThoughtMtbDays>
      </li>
      <li>
        <minSeverity>0.8</minSeverity>
        <label>Disrupting</label>
        <painFactor>0</painFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.01</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>